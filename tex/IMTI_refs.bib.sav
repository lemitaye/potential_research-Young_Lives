	doi = {10.2139/ssrn.250120},
	keywords = {earnings, Hebrew, Immigrants, Israel, language},
	file = {Full Text PDF:C\:\\Users\\tayel\\Zotero\\storage\\XAIC47PI\\Chiswick and Repetto - 2000 - Immigrant Adjustment in Israel Literacy and Fluen.pdf:application/pdf;Snapshot:C\:\\Users\\tayel\\Zotero\\storage\\LFLRKH2W\\papers.html:text/html},
