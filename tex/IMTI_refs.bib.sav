	keywords = {Academic Achievement, Foreign Countries, Bilingual Education, Bilingual Education Programs, Educational Policy, Elementary Secondary Education, English (Second Language), Language Minorities, Language Proficiency, Limited English Speaking, Oral Language, Politics of Education, Second Language Instruction, Second Language Learning, Spanish Speaking},
	file = {Full Text PDF:C\:\\Users\\tayel\\Zotero\\storage\\MGX9A7QA\\Hakuta et al. - 2000 - How Long Does It Take English Learners To Attain P.pdf:application/pdf;Snapshot:C\:\\Users\\tayel\\Zotero\\storage\\I6FWRBAP\\eric.ed.gov.html:text/html},
